<div class="post">
    <div class="metadata">
        <div class="author">{{post.data.author}}</div>
        <div class="timestamp">{{post.data.timestamp}}</div>
    </div>
    <a href={{post.url}}>
        <h1 class="title">{{post.data.title}}</h1>
    </a>
    <div class="postbody">{{post.content | safe }}</div>
    <div class="tags">
        {%- for tag in post.tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
            <li>
                <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
                {%- if not loop.last %}, {% endif %}
            </li>
        {%- endfor %}
    </div>
</div>