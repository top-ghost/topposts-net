{%set item = post | d(collections.posts | getCollectionItem(page))%}

<article class="post h-entry">
    <div class="attribution">
        <div class="metadata p-author h-card">
            <span class="profile-pic"></span>
            <span class="author p-name">{{item.data.author}}</span>
            <span class="timestamp">
                <a href={{item.url}} class="u-url u-uid" rel="canonical">
                    <time datetime={{item.data.timestamp | unixTimestampToIsoDate }} class="dt-published">{{item.data.timestamp | beatsDate if item.data.timestamp }}</time>
                </a>
            </span>
            <data class="p-url" value="/"></data>
            <data class="p-logo" value="/img/moon-dutiful.jpg"></data>
        </div>
    </div>

    <h1 class="title p-name">
        <a href={{item.url}}>{{item.data.title | decode }}</a>
    </h1>

    <div class="postbody e-content">{{item.content  | decode | markdown | safe }}</div>
    <div class="tags">
        <ol>
            {%- for tag in item.data.tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
                <li>
                    <a href="{{ tagUrl }}" class="post-tag">#{{ tag | safe }}</a>
                </li>
            {%- endfor %}
        </ol>
    </div>
</article>